<div class="product">

	<% if @products.present? %>	

	  <h4><%= link_to product.name, product_path(product) %></h4>
	  <h4>Description: <%= product.description %></h4>
	  <% if product.image.present? %>
	    <%= image_tag product.image, class: 'card-img-top img-fluid mx-auto d-block' %>
	  <% end %>
	  <h4>Price: $<%= product.price %></h4>

	  <%= link_to '<button type="button" class="btn btn-primary">Buy</button>'.html_safe,  product_path(product) %>

	<% else %>
      <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
    <% end %>
	
	
</div>